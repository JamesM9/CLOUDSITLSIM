# CloudSITLSIM Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///cloudsitlsim.db
# For PostgreSQL: postgresql://username:password@localhost:5432/cloudsitlsim

# SITL Configuration
SITL_BASE_PORT=14540
MAX_SITL_INSTANCES=10
SITL_TIMEOUT=300

# PX4 Configuration
PX4_DOCKER_IMAGE=px4io/px4-dev-ros2-humble:latest
PX4_PATH=/opt/px4

# ArduPilot Configuration
ARDUPILOT_DOCKER_IMAGE=ardupilot/ardupilot:latest
ARDUPILOT_PATH=/opt/ardupilot

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Display Configuration (for GUI applications)
DISPLAY=:0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/cloudsitlsim.log

# Security Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# Telemetry Configuration
TELEMETRY_UPDATE_RATE=10
TELEMETRY_MAX_HISTORY=1000
TELEMETRY_STORAGE_DURATION=3600

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_TIMEOUT=30
